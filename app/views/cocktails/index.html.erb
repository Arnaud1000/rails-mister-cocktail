<p id="notice"><%= notice %></p>
<div class="class text-center">
<h1>Tous les cocktails</h1>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
            <% @cocktails.each do |cocktail|%>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('background.jpg');">
            <div class="card-category">Cocktails</div>
            <div class="card-description">
                <h2><%= cocktail.name %></h2>
                <ul class="list-unstyled">
                  <% cocktail.doses.each do |dose| %>
                    <li>
                    <%= dose.description %> <%= dose.ingredient.name %>
                    </li>
                    </ul>

                  <% end %>
<%= link_to "Edit",   edit_cocktail_path(cocktail)%>
<%= link_to "Show",   cocktail_path(cocktail)%>

              <% end %>

            </div>
        </div>
    </div>
  </div>
</div>

<%= link_to "New Cocktail", new_cocktail_path(@cocktail)%>
</div>
