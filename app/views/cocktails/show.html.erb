<p id="notice"><%= notice %></p>

<div class="text-center">
<% if @cocktail.photo.url.nil? %>
<% image_path = "http://lorempixel.com/600/400/nigthlife" %>
<% else %>
<% image_path = cl_image_path(@cocktail.photo, height: 30, width: 40, crop: :fit)  %>
<% end %>
<div class="card" style="background-image:url('<%= image_path %>');">
  <div class="card-category">Cocktails</div>
  <div class="card-description">
    <h2><%= @cocktail.name %></h2>
    <ul class="list-unstyled">
<% @cocktail.doses.each do |dose| %>
<li>
<%= dose.description %> <%= dose.ingredient.name %>
</li>
<% end %>
</ul>
  </div>
</div>


<%= simple_form_for [@cocktail, @dose] do |f| %>

    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all, prompt: "Choose an ingredient" %>
    <%= f.button :submit %>
<% end %>
<%= link_to 'Back', cocktails_path %>
<%= link_to "Ingredients",   ingredients_path%>
</div>

